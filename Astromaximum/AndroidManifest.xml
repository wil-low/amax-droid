	android:versionName="1.0.0">

	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="14" />

	<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
	<application android:theme="@style/AmaxTheme"
	    android:allowBackup="true"
		android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MainActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".Preferences"/>
		<activity android:name=".EventListActivity"/>
		<activity android:name=".InterpreterActivity"/>
		<activity android:name=".LocationListActivity"/>
		<activity android:name=".StartPageLayoutActivity"/>
	</application>

</manifest>