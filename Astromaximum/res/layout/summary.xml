<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.astromaximum.android.view"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<com.astromaximum.android.view.DateEventView
	    android:layout_width="fill_parent" 
	    android:layout_height="20dip" 
	    android:id="@+id/date"
		/>
	<LinearLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res/com.astromaximum.android.view"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
		<com.astromaximum.android.view.VocEventView
		    android:layout_width="160dip" 
		    android:layout_height="20dip" 
		    android:id="@+id/voc"
			/>
		<com.astromaximum.android.view.VcEventView
		    android:layout_width="160dip" 
		    android:layout_height="20dip" 
		    android:id="@+id/vc"
			/>
	</LinearLayout>
	<LinearLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res/com.astromaximum.android.view"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
		<com.astromaximum.android.view.SunDegreeEventView
		    android:layout_width="160dip" 
		    android:layout_height="20dip" 
		    android:id="@+id/sun_degree_large"
			/>
		<com.astromaximum.android.view.MoonSignEventView
		    android:layout_width="160dip" 
		    android:layout_height="20dip" 
		    android:id="@+id/moon_sign_large"
			/>
	</LinearLayout>
	<LinearLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res/com.astromaximum.android.view"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
	<com.astromaximum.android.view.EventView
	    android:layout_width="22dip" 
	    android:layout_height="fill_parent" 
	    android:id="@+id/event1"
		/>
	<com.astromaximum.android.view.EventView
	    android:layout_width="22dip" 
	    android:layout_height="fill_parent" 
	    android:id="@+id/event2"
		/>
	<com.astromaximum.android.view.EventView
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:id="@+id/event3"
		/>
	</LinearLayout>
</LinearLayout>
