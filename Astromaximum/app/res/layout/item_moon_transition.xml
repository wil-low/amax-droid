<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:drawable/list_selector_background"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal" >

    <com.astromaximum.android.view.AstroTextView
        android:id="@+id/EventListItemPlanet0"
        class="com.astromaximum.android.view.AstroTextView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBaseline="@+id/EventListItemText0"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|center"
        android:paddingLeft="@dimen/list_item_side_padding"
        android:paddingTop="@dimen/astro_item_top_padding"
        android:paddingRight="@dimen/list_item_side_padding"
        android:textSize="@dimen/list_item_text_size" />

    <TextView
        android:id="@+id/EventListTransitionSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EventListItemText0"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/EventListItemPlanet0"
        android:gravity="center"
        android:paddingLeft="@dimen/list_item_side_padding"
        android:paddingRight="@dimen/list_item_side_padding"
        android:text="@string/norm_range_arrow"
        android:textSize="@dimen/list_item_text_size" />

    <com.astromaximum.android.view.AstroTextView
        android:id="@+id/EventListItemPlanet1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBaseline="@+id/EventListItemText0"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/EventListTransitionSign"
        android:gravity="center"
        android:paddingLeft="@dimen/list_item_side_padding"
        android:paddingTop="@dimen/astro_item_top_padding"
        android:paddingRight="@dimen/list_item_side_padding"
        android:textSize="@dimen/list_item_text_size" />

    <TextView
        android:id="@+id/EventListItemText0"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="right|center"
        android:paddingRight="@dimen/date_padding_right"
        android:textSize="@dimen/list_item_text_size" />

</RelativeLayout>